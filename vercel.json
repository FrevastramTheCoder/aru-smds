{
  "version": 2,
  "rewrites": [
    {
      "source": "/auth/google/callback",
      "destination": "/index.html"
    },
    {
      "source": "/api/auth/:path*",
      "destination": "https://backend-sp9b.onrender.com/api/v1/auth/:path*"
    },
    {
      "source": "/api/spatial/:path*",
      "destination": "https://backend-sp9b.onrender.com/api/spatial/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/auth/:path*",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "https://aru-smds.vercel.app" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,POST,PUT,DELETE,OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" }
      ]
    },
    {
      "source": "/api/spatial/:path*",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "https://aru-smds.vercel.app" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,POST,PUT,DELETE,OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" }
      ]
    }
  ]
}
